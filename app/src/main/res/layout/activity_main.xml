<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

   <LinearLayout
       android:id="@+id/linear_menu"
       android:layout_width="match_parent"
       android:padding="8dp"
       android:background="@color/purple"
       android:layout_height="wrap_content"
       android:paddingStart="8dp"
       android:paddingEnd="8dp"
       android:paddingTop="16dp"
       android:paddingBottom="16dp">




       <ImageView
            android:id="@+id/image_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_all_inclusive" />

       <ImageView
           android:id="@+id/image_happy"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="40dp"
           android:src="@drawable/ic_happy" />


       <ImageView
           android:id="@+id/image_sunny"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="40dp"
           android:src="@drawable/ic_sunny" />

   </LinearLayout>

    <TextView
        android:id="@+id/text_user_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OlÃ¡, Koltin"
        android:textColor="@color/black"
        android:textSize="18sp"

        android:fontFamily="@font/cabin"
        android:layout_marginTop="32dp"
        android:layout_below="@id/linear_menu"/>


    <TextView
        android:id="@+id/text_freeze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="22sp" />



    <View
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:backgroundTint="@color/dark_purple"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:layout_below="@id/text_freeze"/>


    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:text="@string/new_phrase" />
</RelativeLayout>